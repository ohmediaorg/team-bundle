{% extends '@OHMediaBackend/base.html.twig' %}

{% block meta_title %}Teams{% endblock %}

{% block breadcrumbs %}
  {{ bootstrap_breadcrumbs(
    bootstrap_breadcrumb(bootstrap_icon('people') ~ ' Teams', 'team_index'),
  ) }}
{% endblock %}

{% set can_create_team = is_granted(attributes.team.create, new_team) %}

{% set create_team_href = path('team_create') %}

{% block actions %}
  {% if can_create_team %}
    <a href="{{ create_team_href }}" class="btn btn-primary">
      {{ bootstrap_icon('plus-lg') }}
      Add Team
    </a>
  {% endif %}
{% endblock %}

{% block main %}
  <div class="card">
    <div class="card-body">
      <div class="card-title card-title-with-count">
        <h1 class="card-title-heading">Teams</h1>
        <div class="card-title-count">
          {{ bootstrap_badge_primary(pagination.count) }}
        </div>
      </div>

      {{ form_start(search_form) }}
        <div class="row align-items-end">
          <div class="col-lg-6 col-sm-12">
            {{ form_row(search_form.search) }}
          </div>
          <div class="col-lg-12 col-sm-12">
            <button class="btn btn-outline-dark mb-3" type="submit">Search</button>
            <a class="btn btn-secondary mb-3" href="{{ path('team_index') }}">Reset</a>
          </div>
        </div>
      {{ form_end(search_form) }}

      {% if pagination.count %}
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Members</th>
              <th>Shortcode</th>
              <th>Last Updated</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {% for team in pagination.results %}
              {{ _self.table_row(team, attributes) }}
            {% endfor %}
          </tbody>
        </table>

        {{ bootstrap_pagination(pagination) }}

        <small>{{ bootstrap_pagination_info(pagination) }}</small>
      {% else %}
        <p>
          No teams found.
          {% if can_create_team %}
            <a href="{{ create_team_href }}">Click here to add a team.</a>
          {% endif %}
        </p>
      {% endif %}
    </div>
  </div>
{% endblock %}

{% macro table_row(team, attributes) %}
  {% set row_actions = [] %}

  {% if is_granted(attributes.team.view, team) %}
    {% set row_actions = row_actions|merge([{
      route: 'team_view',
      route_params: {id: team.id},
      color: 'outline-dark',
      icon: 'eye',
      text: 'View Team',
    }]) %}
  {% endif %}

  {% if is_granted(attributes.team.edit, team) %}
    {% set row_actions = row_actions|merge([{
      route: 'team_edit',
      route_params: {id: team.id},
      color: 'secondary',
      icon: 'pen',
      text: 'Edit Team',
    }]) %}
  {% endif %}

  {% if is_granted(attributes.team.delete, team) %}
    {% set row_actions = row_actions|merge([{
      route: 'team_delete',
      route_params: {id: team.id},
      color: 'danger',
      icon: 'trash',
      text: 'Delete Team',
      confirm: 'Are you sure you want to delete this team? Clicking OK will take you to a verification step to delete this entry.',
    }]) %}
  {% endif %}

  <tr>
    <td>{{ team.name }}</td>
    <td>{{ team.members|length }}</td>
    <td>{{ shortcode('team(' ~ team.id ~ ')') }}</td>
    <td>{{ team.updatedAt|datetime }}</td>
    <td>
      {% include '@OHMediaBackend/widget/row_actions.html.twig' with {
        row_actions: row_actions,
      } only %}
    </td>
  </tr>
{% endmacro %}
